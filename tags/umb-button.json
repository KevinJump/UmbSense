{
    "$schema": "https://raw.githubusercontent.com/microsoft/vscode-html-languageservice/master/docs/customData.schema.json",
    "version": 1.1,
    "tags": [
        {
            "name": "umb-button",
            "description": "Umbraco button",
            "attributes": [
                {
                    "name": "action",
                    "description": "The button action which should be performed when the button is clicked"
                },
                {
                    "name": "type",
                    "description": "Set the button type",
                    "values": [
                        { "name": "button" },
                        { "name": "link" },
                        { "name": "submit" }
                    ]
                },
                {
                    "name": "button-style",
                    "description": "Set the style of the button",
                    "values": [
                        { "name": "primary" },
                        { "name": "info"},
                        { "name": "warning"},
                        { "name": "danger"},
                        { "name": "inverse"},
                        { "name": "link"},
                        { "name": "block"}
                    ]
                },
                {
                    "name": "state",
                    "description": "Set a progress state on the button"
                },
                {
                    "name": "shortcut",
                    "description": "Set a keyboard shortcut for the button (\"ctrl+c\")."
                },
                {
                    "name": "label",
                    "description": "Set the button label."
                },
                {
                    "name": "label-key",
                    "description": "Set a localization key to make a multi lingual button (\"general_buttonText\")."
                },
                {
                    "name": "icon",
                    "description": "Set a button icon"
                },
                {
                    "name": "size",
                    "description": "Size of button",
                    "values": [ 
                        { "name": "xs"},
                        { "name": "m"},
                        { "name": "l"},
                        { "name": "xl"}
                    ]
                }
            ],
            "references": [
                {
                    "name": "Umbraco Docs : umb-button",
                    "url": "https://our.umbraco.com/apidocs/v8/ui/#/api/umbraco.directives.directive:umbButton"
                }
            ]
        }
    ]
}